<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:osgi="http://www.eclipse.org/gemini/blueprint/schema/blueprint"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans   
       http://www.springframework.org/schema/beans/spring-beans.xsd                  
       http://www.eclipse.org/gemini/blueprint/schema/blueprint 
       http://www.eclipse.org/gemini/blueprint/schema/blueprint/gemini-blueprint.xsd">
	<osgi:reference id="bContainer"
        interface="iam.rizel.prism.broadcast.BroadcasterContainer"/>
        
        <bean id="initBean" class="iam.rizel.prism.eventreceiver.Init" lazy-init="false" init-method="create" destroy-method="destroy">
        	<property name="container" ref="bContainer" />
        </bean>
</beans>